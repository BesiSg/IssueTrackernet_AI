<UserControl x:Class="IssueFormModule.Views.IssueForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Height="460" Width="1880"
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Border Style="{StaticResource FrameWithShadow}">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="10" Width="800">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Summary" Width="140" Style="{StaticResource TB_ItemLabel_Left}"/>
                    <TextBlock Text="{Binding Selected.TSGSD}" Grid.Row="1" Grid.Column="2" Style="{StaticResource TB_ItemContent_Left}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SDRs" Width="140" Style="{StaticResource TB_ItemLabel_Left}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2">
                    <Hyperlink Command="{Binding OpenDetailsCommand}" CommandParameter="{Binding Selected.Key.Uri}">
                        <TextBlock Text="{Binding Selected.Key.Value}"/>
                    </Hyperlink>
                </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="TSGSDs" Width="140" Style="{StaticResource TB_ItemLabel_Left}"/>
                    <TextBlock>
                    <Hyperlink Command="{Binding OpenDetailsCommand}" CommandParameter="{Binding Selected.Summary.Uri}">
                        <TextBlock Text="{Binding Selected.Summary.Value}"/>
                    </Hyperlink>
                </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Comments" Width="140" Style="{StaticResource TB_ItemLabel_Left}"/>
                    <TextBox Text="{Binding Selected.Comments}" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" Width="660" Height="315"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" Width="800">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SummarizedStatus" Width="140" Style="{StaticResource TB_ItemLabel_Left}"/>
                    <TextBox Text="{Binding Selected.SummarizedStatus}" IsReadOnly="True" HorizontalScrollBarVisibility="Visible" Width="660" Height="390"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>

    </Border>
</UserControl>
